<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.create.CreateFragment">

    <!--&lt;!&ndash; TODO: Update blank fragment layout &ndash;&gt;-->
    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:text="@string/title_create"-->
        <!--android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|fill"
        android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="@color/colorNavbar"
                >
                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_camera_alt_black_24dp"
                    android:adjustViewBounds="true"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:layout_weight="0.5"
                android:padding="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_image"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:padding="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/colorNavbar"
                    android:text="Take a picture" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="8dp"
                    android:layout_weight="0.3"
                    android:padding="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/cat_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:hint="Category" />

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/fav_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:hint="Favourite label" />
                </LinearLayout>
                    <!--<Button-->
                        <!--android:id="@+id/button_create"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="48dp"-->
                        <!--android:padding="5dp"-->
                        <!--android:layout_alignParentBottom="true"-->
                        <!--android:layout_centerHorizontal="true"-->
                        <!--android:onClick="addNewCloth"-->
                        <!--android:background="@color/colorNavbar"-->
                        <!--android:text="Create" />-->
                    <Button
                        android:id="@+id/button_create"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:padding="5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/colorNavbar"
                        android:text="Create" />
            </LinearLayout>
    </LinearLayout>
</FrameLayout>